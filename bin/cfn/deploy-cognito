#!/usr/bin/env bash
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../.." && pwd)"

CFN_PATH="$ROOT_DIR/aws/cfn/cognito/cognito.yaml"

STACK_NAME="CrdCognito"
REGION="eu-west-2"
BUCKET="cfn-artifacts-225442939245-eu-west-2"

ENVIRONMENT_SELECTION="${ENVIRONMENT_SELECTION:-dev}"

echo "Deploying Cognito Stack"
echo "Template: $CFN_PATH"
echo "Stack:    $STACK_NAME"
echo "Region:   $REGION"
echo "Bucket:   $BUCKET"

aws cloudformation deploy \
  --stack-name "$STACK_NAME" \
  --s3-bucket "$BUCKET" \
  --s3-prefix cognito \
  --region "$REGION" \
  --template-file "$CFN_PATH" \
  --tags group=cruddur-cognito \
  --parameter-overrides \
    EnvironmentSelection="$ENVIRONMENT_SELECTION" \
  --capabilities CAPABILITY_NAMED_IAM