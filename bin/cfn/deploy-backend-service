#! /usr/bin/env bash
set -e # stop the execution of the script if it fails

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../.." && pwd)"

CFN_PATH="$ROOT_DIR/aws/cfn/backend-service/backend-service.yaml"

# -------------------------------------------------------------------
# Explicit deploy configuration
# -------------------------------------------------------------------
STACK_NAME="CrdSrvBackendFlask"
REGION="eu-west-2"
BUCKET="cfn-artifacts-225442939245-eu-west-2"

# CloudFormation parameters
NETWORKING_STACK="CrdNet"
CLUSTER_STACK="CrdCluster"
EnvCognitoUserPoolClientId="20usdmenjqv0nmofrkldhdnnet"
EnvCognitoUserPoolId="eu-west-2_LdwGkYD5l"
EnvWebsocketApiEndpoint="https://e5mz6glfej.execute-api.eu-west-2.amazonaws.com"

echo "Deploying Service Stack"
echo "Template: $CFN_PATH"
echo "Stack:    $STACK_NAME"
echo "Region:   $REGION"
echo "Bucket:   $BUCKET"

aws cloudformation deploy \
  --stack-name "$STACK_NAME" \
  --s3-bucket "$BUCKET" \
  --s3-prefix backend-service \
  --region "$REGION" \
  --template-file "$CFN_PATH" \
  --tags group=cruddur-backend-flask \
  --parameter-overrides \
    NetworkingStack="$NETWORKING_STACK" \
    ClusterStack="$CLUSTER_STACK" \
    EnvCognitoUserPoolClientId="$EnvCognitoUserPoolClientId" \
    EnvCognitoUserPoolId="$EnvCognitoUserPoolId" \
    EnvWebsocketApiEndpoint="$EnvWebsocketApiEndpoint"  \
  --capabilities CAPABILITY_NAMED_IAM

