#! /usr/bin/env bash
set -e # stop the execution of the script if it fails

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../.." && pwd)"

CFN_PATH="$ROOT_DIR/aws/cfn/cicd/Pipeline.yaml"
PACKAGED_PATH="$ROOT_DIR/tmp/packaged-cicd-template.yaml"

# -------------------------------------------------------------------
# Explicit deploy configuration
# -------------------------------------------------------------------
STACK_NAME="CrdCiCd"
REGION="eu-west-2"
BUCKET="cfn-artifacts-225442939245-eu-west-2"

# CloudFormation parameters
GITHUB_BRANCH="prod"
GITHUB_REPO="Jawidd/aws-project"
CLUSTER_STACK="CrdCluster"
SERVICE_STACK="CrdSrvBackendFlask"

mkdir -p "$ROOT_DIR/tmp"

echo "Deploying CICD Stack"
echo "Template: $CFN_PATH"
echo "Stack:    $STACK_NAME"
echo "Region:   $REGION"
echo "Bucket:   $BUCKET"

echo "== packaging CFN to S3..."
aws cloudformation package \
  --template-file "$CFN_PATH" \
  --s3-bucket "$BUCKET" \
  --s3-prefix cicd-package \
  --region "$REGION" \
  --output-template-file "$PACKAGED_PATH"

aws cloudformation deploy \
  --stack-name "$STACK_NAME" \
  --s3-bucket "$BUCKET" \
  --s3-prefix cicd \
  --region "$REGION" \
  --template-file "$PACKAGED_PATH" \
  --tags group=cruddur-cicd \
  --parameter-overrides \
    GitHubBranch="$GITHUB_BRANCH" \
    GithubRepo="$GITHUB_REPO" \
    ClusterStack="$CLUSTER_STACK" \
    ServiceStack="$SERVICE_STACK" \
  --capabilities CAPABILITY_NAMED_IAM
