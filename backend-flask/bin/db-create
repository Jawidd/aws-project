#! /usr/bin/bash

source $(dirname $0)/.env

if [ "$ENV_TYPE" = "prod" ]; then
    printf "\033[1;35m == db-create-database rds-psql-db \033[0m\n " 
    psql $AWS_RDS_PSQL_CONNECTION_DB -c "create database $DATABASE_NAME" 2>/dev/null || echo "Database already exists, continuing..."
else
    printf "\033[1;36m == db-create-database localhost-postgresql \033[0m\n " 
    psql $CONNECTION_URL_DB -c "create database $DATABASE_NAME" 2>/dev/null || echo "Database already exists, continuing..."
fi
