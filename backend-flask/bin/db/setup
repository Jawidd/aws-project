#!/usr/bin/bash
set -e #exit on error

source $(dirname $0)/../.env

if [ "$ENV_TYPE" = "prod" ]; then
    printf "\033[1;35m == db-setup rds-psql-db \033[0m\n " 
else
    printf "\033[1;36m == db-setup localhost-postgresql \033[0m\n " 
fi

source "./create" #create db
source "./schema-load" #create tables
source "./seed" #populate tables
