#!/usr/bin/bash

source $(dirname $0)/../.env

if [ "$ENV_TYPE" = "prod" ]; then
    printf "\033[1;35m == db-drop rds-psql-db \033[0m\n " 
    psql $AWS_RDS_PSQL_CONNECTION_DB -c "drop database if exists cruddur;"
else
    printf "\033[1;36m == db-drop localhost-postgresql \033[0m\n " 
    psql $CONNECTION_URL_DB -c "drop database if exists crudder;"
fi






