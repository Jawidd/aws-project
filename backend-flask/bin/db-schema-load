#! /usr/bin/bash

source $(dirname $0)/.env

printf "\033[1;36m == db-schema-load-file \033[0m\n " 



if [ $ENV_TYPE = "dev" ]; then
    echo "dev environment"
    psql $CONNECTION_URL cruddur < $(dirname $0)/../db/schema.sql
else
    psql $CONNECTION_URL cruddur < $(dirname $0)/../db/schema.sql
    echo "prod envirnment"
fi


