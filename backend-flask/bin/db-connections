#! /usr/bin/bash

source $(dirname $0)/.env

printf "\033[1;36m == db--connections \033[0m\n " 



#list connections to db
psql $CONNECTION_URL_PSQL -c "select pid as process_id, \
                        usename as user, \
                        datname as db, \
                        client_addr , \
                        application_name as app, \
                        state \
                        from pg_stat_activity;"

