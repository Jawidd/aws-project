#! /usr/bin/bash

source $(dirname $0)/../.env

if [ "$ENV_TYPE" = "prodd" ]; then
    printf "\033[1;35m == DYNAMODB drop-tables prod \033[0m\n "
    
else
    printf "\033[1;36m == DYNAMODB drop-tables local-host \033[0m\n " 
    ENDPOINTURL=$DYNAMODB_LOCAL_URL
fi



aws dynamodb delete-table --endpoint-url $ENDPOINTURL \
 --table-name  $DYNAMODB_MESSAGES_TABLE \
 --output json

 aws dynamodb delete-table --endpoint-url $ENDPOINTURL \
 --table-name  $DYNAMODB_CONVERSATIONS_TABLE \
 --output json

