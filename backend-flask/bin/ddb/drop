#! /usr/bin/bash

source $(dirname $0)/../.env

if [ "$ENV_TYPE" = "prod" ]; then
    printf "\033[1;35m == DYNAMODB drop-tables AWS \033[0m\n"
    ENDPOINTURL=""
else
    printf "\033[1;36m == DYNAMODB drop-tables local \033[0m\n"
    ENDPOINTURL="--endpoint-url $DYNAMODB_LOCAL_URL"
fi

aws dynamodb delete-table $ENDPOINTURL \
 --table-name $DYNAMODB_MESSAGES_TABLE \
 --output json

aws dynamodb delete-table $ENDPOINTURL \
 --table-name $DYNAMODB_CONVERSATIONS_TABLE \
 --output json

