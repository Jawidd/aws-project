#! /usr/bin/bash

source $(dirname $0)/../.env

if [ "$ENV_TYPE" = "prod" ]; then
    printf "\033[1;35m == DYNAMODB list-tables AWS \033[0m\n"
    ENDPOINTURL=""
else
    printf "\033[1;36m == DYNAMODB list-tables local \033[0m\n"
    ENDPOINTURL="--endpoint-url $DYNAMODB_LOCAL_URL"
fi

# List all tables
aws dynamodb list-tables $ENDPOINTURL --query TableNames --output table

