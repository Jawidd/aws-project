#! /usr/bin/bash

source $(dirname $0)/../.env

if [ "$ENV_TYPE" = "prodd" ]; then
    printf "\033[1;35m == DYNAMODB list-tables prod \033[0m\n "
    
else
    printf "\033[1;36m == DYNAMODB list-tables local host \033[0m\n " 
    ENDPOINTURL=$DYNAMODB_LOCAL_URL
fi



aws dynamodb list-tables --endpoint-url $ENDPOINTURL --query TableNames --output table